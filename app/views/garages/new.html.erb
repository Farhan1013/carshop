<div class= "container">


<%= form_for @garage do |f| %>

<h1> ADD A NEW CAR</h1>

	<label>Date: </label><%= f.text_field :date, class: "form-control" %>
	<label>Year: </label><%= f.text_field :year, class: "form-control" %>
	<label>Model: </label><%= f.text_field :model, class: "form-control" %>
	<label>Price: </label><%= f.text_field :price, class: "form-control" %>
	<label>Mileage: </label><%= f.text_field :mileage, class: "form-control" %>
	<label>Phone: </label><%= f.text_field :phone, class: "form-control" %>
	<label>Email: </label><%= f.text_field :email, class: "form-control" %>
	<label>comments: </label><%= f.text_field :comments, class: "form-control" %>



<%= f.submit "Add Car" , class: "btn btn-success"%>

<% end %>

<%= link_to "Back to the list", garages_path %>
</div>